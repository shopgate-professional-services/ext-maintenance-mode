{
  "version": "2.4.0",
  "id": "@shopgate-project/ext-maintenance-mode",
  "components": [
    {
      "id": "MaintenanceMode",
      "type": "portals",
      "path": "frontend/portals/MaintenanceMode",
      "target": "app.globals"
    },
    {
      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    },
    {
      "type": "translations",
      "path": "frontend/locale/es-ES.json",
      "id": "locale/es-ES"
    },
    {
      "type": "translations",
      "path": "frontend/locale/fr-FR.json",
      "id": "locale/fr-FR"
    },
    {
      "type": "translations",
      "path": "frontend/locale/it-IT.json",
      "id": "locale/it-IT"
    }
  ],
  "configuration": {
    "enableMaintenanceMode": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox",
        "label": "Set to enable the Maintenance Mode"
      }
    },
    "showShopLogo": {
      "type": "admin",
      "destination": "frontend",
      "default": true,
      "params": {
        "type": "checkbox",
        "label": "Show shop logo"
      }
    },
    "testUser": {
      "type": "admin",
      "destination": "frontend",
      "default": [],
      "params": {
        "type": "json",
        "label": "Set user email to disable the Maintenance Mode. Multiple emails possible."
      }
    },
    "customHeadline": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Define a custom headline.",
        "type": "text"
      }
    },
    "customMessage": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Define a custom message.",
        "type": "text"
      }
    },
    "images": {
      "type": "admin",
      "destination": "frontend",
      "default": [],
      "params": {
        "label": "Define a images",
        "type": "json"
      }
    },
    "iosAppVersions": {
      "type": "admin",
      "destination": "frontend",
      "default": [],
      "params": {
        "label": "Blocked iOS App Versions.",
        "type": "json"
      }
    },
    "androidAppVersions": {
      "type": "admin",
      "destination": "frontend",
      "default": [],
      "params": {
        "label": "Blocked Android App Versions.",
        "type": "json"
      }
    },
    "iosLink": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "URL for iOS devices.",
        "type": "text"
      }
    },
    "androidLink": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "URL for Android devices.",
        "type": "text"
      }
    },
    "iosButtonText": {
      "type": "admin",
      "destination": "frontend",
      "default": "Link",
      "params": {
        "label": "Text of the link button(iOS).",
        "type": "text"
      }
    },
    "androidButtonText": {
      "type": "admin",
      "destination": "frontend",
      "default": "Link",
      "params": {
        "label": "Text of the link button(Android).",
        "type": "text"
      }
    },
    "startDate": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Start date - Format: YYYY/MM/DD - HH:mm",
        "type": "text"
      }
    },
    "endDate": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "End date - Format: YYYY/MM/DD - HH:mm",
        "type": "text"
      }
    },
    "maintenancePagesWhitelist": {
      "type": "admin",
      "destination": "frontend",
      "default": [],
      "params": {
        "label": "Whitelist that enables maintenance mode only for configured pages",
        "type": "text"
      }
    }
  }
}
