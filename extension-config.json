{
  "version": "1.2.1",
  "id": "@shopgate-project/ext-maintenance-mode",
  "components": [
    {
      "id": "MaintenanceMode",
      "type": "portals",
      "path": "frontend/portals/MaintenanceMode",
      "target": "app.globals"
    },
    {
      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    },
    {
      "type": "translations",
      "path": "frontend/locale/es-ES.json",
      "id": "locale/es-ES"
    },
    {
      "type": "translations",
      "path": "frontend/locale/fr-FR.json",
      "id": "locale/fr-FR"
    },
    {
      "type": "translations",
      "path": "frontend/locale/it-IT.json",
      "id": "locale/it-IT"
    }
  ],
  "configuration": {
    "enableMaintenanceMode": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox",
        "label": "Set to enable the Maintenance Mode"
      }
    },
    "testUser": {
      "type": "admin",
      "destination": "frontend",
      "default": [],
      "params": {
        "type": "json",
        "label": "Set user email to disable the Maintenance Mode. Multiple emails possible."
      }
    },
    "customHeadline": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Define a custom headline.",
        "type": "text"
      }
    },
    "customMessage": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Define a custom message.",
        "type": "text"
      }
    },
    "imageSource": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Define an image source.",
        "type": "text"
      }
    },
    "imageHref": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "label": "Define a url for the image.",
        "type": "text"
      }
    }
  }
}
